{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@just-a-system/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@just-a-system/client-auth-ui-login": [
        "libs/client/auth/ui/login/src/index.ts"
      ],
      "@just-a-system/client-shared-interceptors": [
        "libs/client/_shared/interceptors/src/index.ts"
      ],
      "@just-a-system/client-shell": ["libs/client/shell/feature/src/index.ts"],
      "@just-a-system/client-shell-ui-layout": [
        "libs/client/shell/ui/layout/src/index.ts"
      ],
      "@just-a-system/client-shell-ui-nav-bar": [
        "libs/client/shell/ui/nav-bar/src/index.ts"
      ],
      "@just-a-system/mongo": ["libs/infra/mongo/src/index.ts"],
      "@just-a-system/server-data-access-auth": [
        "libs/server/auth/data-access/src/index.ts"
      ],
      "@just-a-system/server-data-access-users": [
        "libs/server/users/data-access/src/index.ts"
      ],
      "@just-a-system/server-feature-auth": [
        "libs/server/auth/feature/src/index.ts"
      ],
      "@just-a-system/server-feature-core": [
        "libs/server/core/feature/src/index.ts"
      ],
      "@just-a-system/server-feature-users": [
        "libs/server/users/feature/src/index.ts"
      ],
      "@just-a-system/server-middlewares": [
        "libs/server/_common/middlewares/src/index.ts"
      ],
      "@just-a-system/util-common": ["libs/_shared/util-common/src/index.ts"],
      "@just-a-system/util-constants": [
        "libs/_shared/util-constants/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
